<?xml version="1.0" encoding="utf-8"?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="TpExam.MainPage"
            xmlns:local="clr-namespace:TpExam"
            Title="Menu"
            FlyoutLayoutBehavior="SplitOnLandscape">

    <!-- Flyout content -->
    <FlyoutPage.Flyout>
        <local:FlyoutMenu x:Name="Flyout"/>
    </FlyoutPage.Flyout>

    <!-- Detail content -->
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <local:UserCategory/>
            </x:Arguments>
            <NavigationPage.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="Android, iOS" Value="login.png" />
                    <!-- Add other platforms if needed -->
                </OnPlatform>
            </NavigationPage.Icon>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>
