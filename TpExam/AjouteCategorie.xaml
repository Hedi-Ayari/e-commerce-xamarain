<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TpExam.AjouteCategorie">
    <ContentPage.Content>
        <StackLayout>
            <TableView>
                <TableRoot>
                    <TableSection>
                        <EntryCell x:Name="Name" Label="CategorieName"/>
                    </TableSection>
                </TableRoot>
            </TableView>
            <Button x:Name="BtnAdd" Text="Ajouter" Clicked="BtnAdd_Clicked"/>
            <Button x:Name="ShowCategoriesButton" Text="Show Categories" Clicked="ShowCategoriesButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>